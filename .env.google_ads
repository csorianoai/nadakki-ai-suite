# Google Ads Configuration - NADAKKI AI Suite
# ============================================================

# Google Ads API Credentials
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CUSTOMER_ID=your_customer_id_here

# OAuth 2.0 Credentials
NADAKKI_GOOGLE_CLIENT_ID=your_client_id_here
NADAKKI_GOOGLE_CLIENT_SECRET=your_client_secret_here

# Refresh Token (obtenido después del primer login)
NADAKKI_GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Environment
ENVIRONMENT=development
DEBUG=true

# Multi-tenant Configuration
TENANT_ID=default
TENANT_NAME=Default Organization

# Google Ads API Configuration
GOOGLE_ADS_API_VERSION=v16
GOOGLE_ADS_API_ENDPOINT=https://googleads.googleapis.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/google_ads.log

# Rate Limiting
MAX_REQUESTS_PER_SECOND=5
MAX_REQUESTS_PER_DAY=10000

# Timeouts
REQUEST_TIMEOUT_SECONDS=30
BATCH_TIMEOUT_SECONDS=300

# Features
ENABLE_BUDGET_PACING=true
ENABLE_STRATEGY_OPTIMIZATION=true
ENABLE_COPY_GENERATION=true
ENABLE_SEARCH_TERMS_CLEANING=true

# Performance
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=admin@nadakki.com
