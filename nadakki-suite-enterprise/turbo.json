{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "**/.env.local"
  ],
  "tasks": {
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "build": {
      "outputs": [
        ".next/**"
      ],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
